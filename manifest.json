  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://lingoquest.app/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+lingoquest",
      "url": "/?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/open-game-file/",
      "accept": {
        "application/json": [".lgq", ".lingoquest"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "permissions": [
    "storage-access",
    "notifications"
  ],
  
  "id": "lingoquest-word-game",
  
  "offline_capable": true,
  
  "user_preferences": {
    "color_scheme_dark": {
      "theme_color": "#1a1a1a",
      "background_color": "#121212"
    },
    "color_scheme_light": {
      "theme_color": "#4a90e2",
      "background_color": "#ffffff"
    }
  },
  
  "features": [
    "offline-support",
    "multilingual",
    "accessibility",
    "cross-platform",
    "responsive-design",
    "senior-friendly",
    "progressive-web-app"
  ],
  
  "custom": {
    "supported_languages": [
      "en",
      "fr", 
      "de",
      "es",
      "it",
      "pt"
    ],
    "game_modes": [
      "classic",
      "hollybolly"
    ],
    "difficulty_levels": [
      "easy",
      "medium", 
      "hard"
    ],
    "accessibility_features": [
      "high-contrast",
      "large-fonts",
      "screen-reader-support",
      "keyboard-navigation",
      "reduced-motion",
      "dyslexic-friendly-fonts"
    ],
    "senior_friendly_features": [
      "large-buttons",
      "clear-typography",
      "simple-navigation",
      "voice-guidance",
      "customizable-interface"
    ]
  }
}
