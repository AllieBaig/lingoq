




# LingoQuest PWA - Production Environment Configuration
# This file contains production-specific environment variables
# Created: 2024-06-06 | Version: 1.0.0

# Application Configuration
APP_NAME=LingoQuest
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false

# API Configuration
API_BASE_URL=https://api.lingoquest.app
API_VERSION=v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# CDN and Assets
CDN_BASE_URL=https://cdn.lingoquest.app
ASSETS_BASE_URL=https://assets.lingoquest.app
STATIC_ASSETS_VERSION=1.0.0

# Database Configuration (if applicable)
DB_HOST=prod-db.lingoquest.app
DB_PORT=5432
DB_NAME=lingoquest_prod
DB_SSL=true

# Cache Configuration
CACHE_DURATION=86400
CACHE_MAX_SIZE=100MB
ENABLE_BROWSER_CACHE=true

# Service Worker Configuration
SW_CACHE_NAME=lingoquest-v1.0.0
SW_CACHE_VERSION=1.0.0
SW_UPDATE_CHECK_INTERVAL=86400000

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_ID=GA-XXXXXXXXXX
ANALYTICS_DOMAIN=lingoquest.app

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_ADVANCED_THEMES=true
ENABLE_HOLLYBOLLY_MODE=true
ENABLE_MIXLINGO_MODE=false

# Performance Configuration
ENABLE_LAZY_LOADING=true
ENABLE_CODE_SPLITTING=true
ENABLE_COMPRESSION=true
MAX_BUNDLE_SIZE=250KB

# Security Configuration
ENABLE_CSP=true
ENABLE_HSTS=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Logging Configuration
LOG_LEVEL=error
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_URL=https://errors.lingoquest.app

# Third-party Services
FONT_PROVIDER=google
ICON_PROVIDER=local
MAP_PROVIDER=none

# Accessibility Configuration
ENABLE_HIGH_CONTRAST=true
ENABLE_SCREEN_READER=true
ENABLE_KEYBOARD_NAV=true
MINIMUM_FONT_SIZE=14px

# Language Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,de,es,it,pt
ENABLE_RTL=false

# Game Configuration
DEFAULT_DIFFICULTY=medium
MAX_QUESTIONS_PER_GAME=20
ENABLE_SCORE_SHARING=true
ENABLE_LEADERBOARDS=false

# PWA Configuration
PWA_DISPLAY_MODE=standalone
PWA_ORIENTATION=portrait
PWA_THEME_COLOR=#007bff
PWA_BACKGROUND_COLOR=#ffffff

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_BOUNDARY=true
ENABLE_MEMORY_MONITORING=true

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false




