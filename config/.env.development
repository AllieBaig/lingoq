

# LingoQuest PWA - Development Environment Configuration
# This file contains development-specific settings

# Environment
NODE_ENV=development

# Application Settings
APP_NAME=LingoQuest (Dev)
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:3000
APP_DESCRIPTION=LingoQuest PWA - Development Build

# Development Server
DEV_PORT=3000
DEV_HOST=localhost
DEV_HTTPS=false
DEV_OPEN=true
DEV_HOT_RELOAD=true
DEV_LIVE_RELOAD=true

# Build Settings
BUILD_PATH=dist
PUBLIC_PATH=/
SOURCE_MAP=true
MINIFY=false
OPTIMIZE=false

# PWA Settings (Development)
PWA_NAME=LingoQuest Dev
PWA_SHORT_NAME=LQ Dev
PWA_THEME_COLOR=#4a90e2
PWA_BACKGROUND_COLOR=#ffffff
PWA_DISPLAY=standalone
PWA_ORIENTATION=portrait

# Service Worker (Development)
ENABLE_SERVICE_WORKER=true
SW_UPDATE_CHECK_INTERVAL=10000
SW_CACHE_STRATEGY=network-first
CACHE_VERSION=dev-1.0.0

# Feature Flags (Development - All Enabled)
ENABLE_HOLLYBOLLY_MODE=true
ENABLE_MIXLINGO_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLS=true
ENABLE_PERFORMANCE_MONITORING=true

# Theme Settings
DEFAULT_THEME=light
ENABLE_STUDENT_THEMES=true
ENABLE_SENIOR_THEMES=true
ENABLE_CARTOON_THEMES=true
ENABLE_THEME_SWITCHING=true

# Game Settings (Development)
DEFAULT_DIFFICULTY=easy
DEFAULT_QUESTIONS_COUNT=5
ENABLE_SOUND=true
ENABLE_ANIMATIONS=true
ENABLE_SKIP_QUESTIONS=true
ENABLE_CHEAT_MODE=true

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,de
ENABLE_LANGUAGE_SWITCHING=true

# Debug Settings (Development)
DEBUG_MODE=true
CONSOLE_LOGS=true
VERBOSE_LOGS=true
ERROR_REPORTING=true
SHOW_PERFORMANCE_METRICS=true
ENABLE_REDUX_DEVTOOLS=true

# API Settings (Development)
API_BASE_URL=http://localhost:3001/api
API_TIMEOUT=5000
API_RETRY_ATTEMPTS=3
MOCK_API_RESPONSES=true

# Database Settings (Development)
DB_TYPE=localStorage
DB_CLEAR_ON_RELOAD=false
DB_BACKUP_ENABLED=true

# Security Settings (Relaxed for Development)
CONTENT_SECURITY_POLICY=false
STRICT_TRANSPORT_SECURITY=false
X_FRAME_OPTIONS=SAMEORIGIN
CORS_ENABLED=true

# Performance Settings (Development)
ENABLE_COMPRESSION=false
ENABLE_CODE_SPLITTING=false
BUNDLE_ANALYZER=true
WEBPACK_BUNDLE_ANALYZER=true

# Testing Settings
ENABLE_TEST_MODE=true
MOCK_USER_DATA=true
BYPASS_AUTH=true
ENABLE_E2E_HELPERS=true

# Hot Reload Settings
HMR_ENABLED=true
HMR_PORT=3001
WEBSOCKET_PORT=3002

# Development Tools
ENABLE_COMPONENT_INSPECTOR=true
ENABLE_STATE_DEBUGGER=true
ENABLE_NETWORK_MONITOR=true
SHOW_RENDER_COUNT=true

# Local Storage
CLEAR_STORAGE_ON_START=false
PERSIST_DEV_SETTINGS=true

# Error Handling
SHOW_ERROR_OVERLAY=true
BREAK_ON_ERRORS=true
DETAILED_ERROR_MESSAGES=true

# Notification Settings (Development)
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_PERMISSION_PROMPT=false

# Analytics (Disabled in Development)
GOOGLE_ANALYTICS_ID=
MICROSOFT_CLARITY_ID=
TRACK_USER_INTERACTIONS=false

# External Services (Development)
TRANSLATION_API_KEY=dev_key_here
DICTIONARY_API_KEY=dev_key_here
USE_MOCK_SERVICES=true

# File Watching
WATCH_FILES=true
WATCH_EXTENSIONS=.js,.html,.css,.json
IGNORE_PATTERNS=node_modules,dist,.git

# Development Shortcuts
ENABLE_KEYBOARD_SHORTCUTS=true
SHOW_DEV_MENU=true
ENABLE_QUICK_RESTART=true

# Memory and Performance
MEMORY_LIMIT=2048
MAX_OLD_SPACE_SIZE=4096
GARBAGE_COLLECTION_INTERVAL=30000

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false
LOG_FILE_PATH=logs/development.log

