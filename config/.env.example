

# LingoQuest PWA - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
APP_NAME=LingoQuest
APP_VERSION=1.0.0
APP_URL=https://alliebaig.github.io/lingoq
APP_DESCRIPTION=A Progressive Web App word game for all ages

# Development Server Settings
DEV_PORT=3000
DEV_HOST=localhost
DEV_HTTPS=false

# Build Settings
BUILD_PATH=dist
PUBLIC_PATH=/lingoq/
SOURCE_MAP=true
MINIFY=true

# PWA Settings
PWA_NAME=LingoQuest
PWA_SHORT_NAME=LingoQuest
PWA_THEME_COLOR=#4a90e2
PWA_BACKGROUND_COLOR=#ffffff
PWA_DISPLAY=standalone
PWA_ORIENTATION=portrait

# GitHub Pages Settings (for deployment)
GITHUB_PAGES=true
GITHUB_REPOSITORY=alliebaig/lingoq
GITHUB_BRANCH=main

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MICROSOFT_CLARITY_ID=

# External APIs (if needed)
TRANSLATION_API_KEY=
DICTIONARY_API_KEY=

# Feature Flags
ENABLE_HOLLYBOLLY_MODE=true
ENABLE_MIXLINGO_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_SERVICE_WORKER=true

# Theme Settings
DEFAULT_THEME=light
ENABLE_STUDENT_THEMES=true
ENABLE_SENIOR_THEMES=true
ENABLE_CARTOON_THEMES=true

# Game Settings
DEFAULT_DIFFICULTY=medium
DEFAULT_QUESTIONS_COUNT=20
ENABLE_SOUND=true
ENABLE_ANIMATIONS=true

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,de,es,it,pt

# Cache Settings
CACHE_VERSION=v1.0.2
STATIC_CACHE_NAME=lingoquest-static
DYNAMIC_CACHE_NAME=lingoquest-dynamic
CACHE_STRATEGY=cache-first

# Security Settings
CONTENT_SECURITY_POLICY=true
STRICT_TRANSPORT_SECURITY=true
X_FRAME_OPTIONS=DENY

# Performance Settings
ENABLE_COMPRESSION=true
ENABLE_CODE_SPLITTING=true
BUNDLE_ANALYZER=false

# Debug Settings
DEBUG_MODE=false
CONSOLE_LOGS=true
ERROR_REPORTING=true

# Deployment Settings
DEPLOY_PREVIEW=false
DEPLOY_BRANCH=main
DEPLOY_COMMAND=npm run build

# Social Media
TWITTER_HANDLE=@LingoQuestApp
FACEBOOK_PAGE=LingoQuestApp
GITHUB_URL=https://github.com/alliebaig/lingoq

# Contact Information
SUPPORT_EMAIL=support@lingoquest.app
FEEDBACK_EMAIL=feedback@lingoquest.app
