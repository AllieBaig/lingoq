

{
  "name": "lingoquest",
  "version": "1.0.0",
  "description": "LingoQuest - A Progressive Web App featuring dual word game modes for seniors and students",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "npx serve -s . -l 3000",
    "dev": "npx live-server --port=3000 --no-browser --ignore=node_modules",
    "build": "npm run lint && npm run test",

    "lint": "eslint js/**/*.js"
    "_lint_comment": "npx eslint --config .eslintrc.cjs js/**/*.js --fix",

    
    "lint:css": "npx stylelint css/**/*.css --fix",
    "test": "npm run test:unit && npm run test:e2e",

    
    "test:unit": "jest --config jest.config.cjs"
    "_test:unit_comment": "npx jest --config jest.config.js",

    
    "test:e2e": "npx playwright test",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "format": "npx prettier --write .",
    "validate": "npm run lint && npm run lint:css && npm run test",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "pwa-audit": "npx pwa-builder validate http://localhost:3000",
    "minify:css": "npx clean-css-cli css/**/*.css -o dist/css/",
    "minify:js": "npx terser js/**/*.js --compress --mangle -o dist/js/",
    "deploy": "npm run build && npm run minify:css && npm run minify:js",
    "serve:https": "npx serve -s . -l 3000 --ssl-cert cert.pem --ssl-key key.pem"
  },
  "keywords": [
    "word-game",
    "pwa",
    "progressive-web-app",
    "accessibility",
    "seniors",
    "students",
    "education",
    "multilingual",
    "offline-first",
    "responsive",
    "es6-modules"
  ],
  "author": {
    "name": "LingoQuest Team",
    "email": "info@lingoquest.app",
    "url": "https://lingoquest.app"
  },
  "license": "MIT",
  "homepage": "https://alliebaig.github.io/lingoq/",
  "repository": {
    "type": "git",
    "url": "https://github.com/alliebaig/lingoq.git"
  },
  "bugs": {
    "url": "https://github.com/alliebaig/lingoq/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.0",
    "pwabuilder": "^2.0.3-rc.1",
    "serve": "^14.2.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.26.0"
  },
  "dependencies": {},
  "pwa": {
    "name": "LingoQuest",
    "short_name": "LingoQuest",
    "description": "Word game PWA for all ages",
    "theme_color": "#007bff",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait",
    "start_url": "/",
    "scope": "/"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/?(*.)(spec|test).js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/data/**/*.js",
      "!js/workers/**/*.js",
      "!js/main.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "__DEV__": true
    },
    "testTimeout": 10000,
    "clearMocks": true,
    "restoreMocks": true,
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "max-line-length": 150,
      "selector-class-pattern": null,
      "custom-property-pattern": null
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 100
  }
}


